# Development Dockerfile - uses pre-built local binary
FROM ubuntu:22.04

# Install runtime dependencies
RUN apt-get update && apt-get install -y \
    ca-certificates \
    iproute2 \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user for running the service
# Note: eBPF requires CAP_BPF and CAP_PERFMON capabilities
RUN useradd -m -u 1000 -s /bin/bash ebpf

# Copy the pre-built binary from local build directory
COPY ./ebpf-sidecar/build/bin/ebpf-sidecar /usr/local/bin/ebpf-sidecar
RUN chmod +x /usr/local/bin/ebpf-sidecar

# Create config directory (config will be mounted at runtime)
RUN mkdir -p /etc/ebpf-sidecar

# Note: /sys/fs/bpf is mounted at runtime, not created during build

# Expose ports
EXPOSE 18080 19090

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:18080/health || exit 1

# Set the entrypoint
# Note: Container must be run with --privileged or specific capabilities
ENTRYPOINT ["/usr/local/bin/ebpf-sidecar"]
CMD ["--config", "/etc/ebpf-sidecar/config.yaml"]
